     <!-- display section -->
            <!--bread crum div -->
            <div class="d-flex justify-content-between p-2 m-1 bg-success-subtle ">
                <h5 class="font-bold">Scraps</h5>
                <%if(user.role === "Admin"){%>
                 <button class="btn btn-success" onclick="document.getElementById('myModal').style.display='block'">SCRAP A PRODUCT</button>
                <%}%> 
               </div>
            <div class="h-59 p-1 d-flex flex-column" >
                 <%if(Scraps.length > 0){%>
                   <%Scraps.forEach(Scrap=>{%>
                   <!-- display here  -->
                   <span onclick="location.assign('')" class="list-group position-relative mb-2">
                     <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" >
                         <small class="position-absolute top-0  start-50 translate-middle badge rounded-pill bg-warning"title='grand total of this bill'>
                            <%if(Scrap.status==='Approved'){%>
                           <span class="badge bg-secondary">SCRAPED</span>
                           <%}%>
                         </small>
                             <p class="form-label" title="Product">
                                
                                <%pname = Products.filter(name=>{%>
                                    <% return name.ACDcode.toString() === Scrap.ADC_CODE.toString()%>
                                    <%})%>
                                     <%pname.map(n=>{%>
                                       <%=n.Name.toUpperCase()%>
                                     <%})%>
                            </p>
                           <div>
                             <p> <%pname = Products.filter(name=>{%>
                                <% return name.ACDcode.toString() === Scrap.ADC_CODE.toString()%>
                                <%})%>
                                 <%pname.map(n=>{%>
                                   1 x <%=n.UMO.toUpperCase()%>
